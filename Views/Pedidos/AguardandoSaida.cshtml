@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Pedidos Aguardando Saída";
}

<h1>Pedidos Aguardando Saída</h1>
<p class="lead text-muted">Estes são os pedidos que precisam ser processados e enviados.</p>
<hr />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Data</th>
            <th>Total</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>**#@item.Id**</td>
                <td>@item.Usuario.Email</td> 
                <td>@item.DataPedido.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.TotalPedido.ToString("C2")</td>
                <td><span class="badge bg-warning">@item.Status</span></td>
                <td>
                    <a asp-action="DetalhesAdmin" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-success">Parabéns! Nenhum pedido aguardando saída no momento.</div>
}