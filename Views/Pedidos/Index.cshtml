@model IEnumerable<Pedido>

@{
    ViewData["Title"] = "Gerenciar Pedidos";
    var statusList = new List<string> { "Todos", "Processando", "Enviado", "Entregue", "Cancelado" };

    // CORREÇÃO: Usar coalescência nula (?? 0) para evitar NullReferenceException.
    int pedidosProcessando = (int)(ViewData["PedidosProcessando"] ?? 0);
    decimal total7dias = (decimal)(ViewData["TotalUltimos7Dias"] ?? 0.00m);
    int pedidosCancelados = (int)(ViewData["PedidosCancelados"] ?? 0);
}

<h1>Gerenciar Pedidos</h1>
<hr />

<div class="row mb-4 d-flex align-items-stretch">
    
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3 h-100"> 
            <div class="card-header fw-bold">Aguardando Saída</div>
            <div class="card-body d-flex flex-column"> 
                <h2 class="card-title">@pedidosProcessando</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-success mb-3 h-100">
            <div class="card-header fw-bold">Receita 7 Dias (Env/Ent)</div>
            <div class="card-body">
                <h2 class="card-title">@total7dias.ToString("C2")</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card text-white bg-danger mb-3 h-100">
            <div class="card-header fw-bold">Pedidos Cancelados</div>
            <div class="card-body">
                <h2 class="card-title">@pedidosCancelados</h2>
            </div>
        </div>
    </div>
</div>

<form asp-controller="Pedidos" asp-action="Index" method="get" class="mb-4">
    <div class="input-group" style="width: 300px;">
        <select name="statusFilter" class="form-select" onchange="this.form.submit()">
            @foreach (var status in statusList)
            {
                <option value="@status" selected="@(status == (string)ViewData["CurrentStatus"])">@status</option>
            }
        </select>
        <a asp-action="Index" class="btn btn-secondary">Limpar Filtro</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Data</th>
            <th>Total</th>
            <th>Status</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>**#@item.Id**</td>
                <td>@item.Usuario!.Email</td> 
                <td>@item.DataPedido.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.TotalPedido.ToString("C2")</td>
                <td><span class="badge bg-primary">@item.Status</span></td>
                <td>
                    <a asp-action="DetalhesAdmin" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>