@model List<Ecomerce.Models.Pedido>
@using Ecomerce.Models

@{
    ViewData["Title"] = "Meus Pedidos";
}

<h1>Meus Pedidos</h1>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        Você ainda não realizou nenhum pedido.
    </div>
}
else
{
    <div class="accordion" id="accordionPedidos">
        @foreach (var pedido in Model)
        {
            <div class="accordion-item shadow-sm mb-3">
                <h2 class="accordion-header" id="heading_@pedido.Id">
                    <button class="accordion-button @(pedido.Status == "Pendente" ? "bg-warning" : "bg-light")" type="button"
                        data-bs-toggle="collapse" data-bs-target="#collapse_@pedido.Id" aria-expanded="true"
                        aria-controls="collapse_@pedido.Id">
                        <div class="w-100 d-flex justify-content-between">
                            <span>
                                Pedido **#@pedido.Id**
                                <span class="text-muted small ms-3">@pedido.DataPedido.ToString("dd/MM/yyyy HH:mm")</span>
                            </span>
                            <span>
                                **Status:** <span
                                    class="badge @(pedido.Status == "Pendente" || pedido.Status == "Processando" || pedido.Status == "Aguardando Pagamento" ? "bg-warning" : "bg-success")">@pedido.Status</span>
                                **Total:** <span class="text-dark fw-bold ms-3">@pedido.TotalPedido.ToString("C2")</span>
                            </span>
                        </div>
                    </button>
                </h2>
                <div id="collapse_@pedido.Id" class="accordion-collapse collapse" aria-labelledby="heading_@pedido.Id"
                    data-bs-parent="#accordionPedidos">
                    <div class="accordion-body">

                        @{
                            decimal subtotalOriginal = pedido.ItensPedido?.Sum(item => item.Quantidade * item.PrecoTabela) ?? 0.00m;
                            decimal subtotalBruto = pedido.ItensPedido?.Sum(item => item.Quantidade * item.PrecoUnitario) ?? 0.00m;
                            decimal descontoCupom = pedido.ValorDescontoCupom;
                            decimal descontoPromocaoProduto = subtotalOriginal - subtotalBruto;
                            decimal economiaTotal = descontoPromocaoProduto + descontoCupom;

                            string nomeCliente = pedido.NomeCliente ?? "N/A";
                            string endereco = pedido.Endereco ?? "N/A";
                            string cidade = pedido.Cidade ?? "N/A";
                        }

                        <div class="row">

                            <div class="col-md-6 mb-3">
                                <h5>Endereço de Entrega:</h5>
                                <p class="mb-0">**@nomeCliente**</p>
                                <p class="mb-0">@endereco</p>
                                <p class="mb-0">@cidade</p>
                                @if (!string.IsNullOrEmpty(pedido.CodigoCupom))
                                {
                                    <p class="mb-0 mt-2">**Cupom Utilizado:** <span class="badge bg-primary">@pedido.CodigoCupom</span></p>
                                }
                            </div>

                            <div class="col-md-6 mb-3">
                                <h5>Resumo Financeiro:</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between">
                                        Subtotal (Preço Tabela):
                                        <span class="fw-bold">@subtotalOriginal.ToString("C2")</span>
                                    </li>

                                    @if (descontoPromocaoProduto > 0.00m)
                                    {
                                        <li class="list-group-item d-flex justify-content-between text-success">
                                            Desconto em Promoções:
                                            <span class="fw-bold">- @descontoPromocaoProduto.ToString("C2")</span>
                                        </li>
                                    }

                                    @if (descontoCupom > 0.00m)
                                    {
                                        <li class="list-group-item d-flex justify-content-between text-info">
                                            Desconto do Cupom (@(pedido.CodigoCupom ?? "Código")):
                                            <span class="fw-bold">- @descontoCupom.ToString("C2")</span>
                                        </li>
                                    }
                                    
                                    @if (economiaTotal > 0.00m)
                                    {
                                        <li class="list-group-item d-flex justify-content-between text-danger">
                                            **Economia Total:**
                                            <span class="fw-bold">- @economiaTotal.ToString("C2")</span>
                                        </li>
                                    }

                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        **Total do Pedido:**
                                        <span class="fw-bolder">@pedido.TotalPedido.ToString("C2")</span>
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <h5 class="mt-4">Itens Comprados:</h5>
                        <ul class="list-group">
                            @foreach (ItemPedido item in pedido.ItensPedido ?? Enumerable.Empty<ItemPedido>())
                            {
                                decimal precoFinalCobrado = item.PrecoUnitario;
                                bool temPromocao = item.PrecoTabela > item.PrecoUnitario;

                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        @item.Quantidade x @(item.Produto?.Nome ?? "Produto Indisponível")

                                        @if (temPromocao)
                                        {
                                            <span class="badge bg-danger ms-2">Em Promoção</span>
                                        }
                                    </span>
                                    <span class="badge bg-primary rounded-pill">
                                        @precoFinalCobrado.ToString("C2") / und.
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}