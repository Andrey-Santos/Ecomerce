@model List<Pedido>

@{
    ViewData["Title"] = "Meus Pedidos";
}

<h1>Meus Pedidos</h1>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info" role="alert">
        Você ainda não realizou nenhum pedido.
    </div>
}
else
{
    <div class="accordion" id="accordionPedidos">
        @foreach (var pedido in Model)
        {
            <div class="accordion-item shadow-sm mb-3">
                <h2 class="accordion-header" id="heading_@pedido.Id">
                    <button class="accordion-button @(pedido.Status == "Pendente" ? "bg-warning" : "bg-light")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@pedido.Id" aria-expanded="true" aria-controls="collapse_@pedido.Id">
                        <div class="w-100 d-flex justify-content-between">
                            <span>
                                Pedido **#@pedido.Id**
                                <span class="text-muted small ms-3">@pedido.DataPedido.ToString("dd/MM/yyyy HH:mm")</span>
                            </span>
                            <span>
                                **Status:** <span class="badge @(pedido.Status == "Pendente" ? "bg-danger" : "bg-success")">@pedido.Status</span>
                                **Total:** <span class="text-dark fw-bold ms-3">@pedido.TotalPedido.ToString("C2")</span>
                            </span>
                        </div>
                    </button>
                </h2>
                <div id="collapse_@pedido.Id" class="accordion-collapse collapse" aria-labelledby="heading_@pedido.Id" data-bs-parent="#accordionPedidos">
                    <div class="accordion-body">
                        <h5>Itens do Pedido:</h5>
                        <ul class="list-group">
                            @foreach (var item in pedido.ItensPedido)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@item.Quantidade x @item.Produto.Nome</span>
                                    <span class="badge bg-primary rounded-pill">@((item.Quantidade * item.PrecoUnitario).ToString("C2"))</span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}