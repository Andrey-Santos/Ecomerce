@model Ecomerce.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-box-seam me-2"></i> Cadastrar Produto</h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome do produto" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Preco" class="form-label fw-semibold"></label>
                        <input asp-for="Preco" class="form-control shadow-sm" placeholder="0,00" />
                        <span asp-validation-for="Preco" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <h4 class="mb-3 text-primary">Configurações de Promoção</h4>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" asp-for="EmPromocao" />
                    <label class="form-check-label fw-semibold" asp-for="EmPromocao">Ativar Promoção</label>
                </div>

                <div id="promo-area">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="PrecoPromocional" class="form-label fw-semibold"></label>
                            <input asp-for="PrecoPromocional" class="form-control shadow-sm"
                                placeholder="Preço promocional" />
                            <span asp-validation-for="PrecoPromocional" class="text-danger small"></span>
                            <small class="form-text text-muted">Deixe vazio se não houver promoção.</small>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descricao" class="form-control shadow-sm" rows="4"
                        placeholder="Descrição detalhada do produto..."></textarea>
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ImagemUpload" class="form-label fw-semibold">Imagem do Produto:</label>
                    <input asp-for="ImagemUpload" type="file" class="form-control shadow-sm" />
                    <span asp-validation-for="ImagemUpload" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i> Voltar à Lista
                    </a>

                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle me-1"></i> Cadastrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const promoCheck = document.querySelector('[name="EmPromocao"]');
        const promoArea = document.getElementById("promo-area");

        function togglePromo() {
            promoArea.style.display = promoCheck.checked ? "block" : "none";
        }

        promoCheck.addEventListener("change", togglePromo);
        togglePromo();
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}