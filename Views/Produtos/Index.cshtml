@model IEnumerable<Ecomerce.Models.Produto>

@{
    ViewData["Title"] = "Gestão de Produtos";
}

<h1>Produtos</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Adicionar Novo Produto</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecoPromocional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmPromocao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Produto item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @(item.Descricao.Length > 50 ? item.Descricao.Substring(0, 50) + "..." : item.Descricao)
            </td>
            <td>
                @item.Preco.ToString("C2")
            </td>
            <td>
                @if (item.PrecoPromocional.HasValue)
                {
                    <span class="text-danger fw-bold">@item.PrecoPromocional.Value.ToString("C2")</span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td>
                @if (item.EmPromocao)
                {
                    <span class="badge bg-success">Sim</span>
                }
                else
                {
                    <span class="badge bg-secondary">Não</span>
                }
            </td>
            <td>
                <img src="@item.ImagemUrl" alt="Imagem" style="width: 50px; height: 50px; object-fit: cover;" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>