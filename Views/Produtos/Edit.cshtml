@model Ecomerce.Models.Produto

@{
    ViewData["Title"] = "Editar Produto";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Produto</h2>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ImagemUrl" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Nome" class="form-label fw-semibold"></label>
                        <input asp-for="Nome" class="form-control shadow-sm" placeholder="Digite o nome do produto" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Preco" class="form-label fw-semibold"></label>
                        <input asp-for="Preco" class="form-control shadow-sm" placeholder="0,00" />
                        <span asp-validation-for="Preco" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-semibold"></label>
                    <textarea asp-for="Descricao" class="form-control shadow-sm" rows="3"
                        placeholder="Descrição detalhada..."></textarea>
                    <span asp-validation-for="Descricao" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ImagemUpload" class="form-label fw-semibold">Trocar Imagem:</label>
                    <input asp-for="ImagemUpload" type="file" class="form-control shadow-sm" />
                    <span asp-validation-for="ImagemUpload" class="text-danger small"></span>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImagemUrl))
                {
                    <div class="mb-4 text-center">
                        <label class="form-label fw-semibold d-block">Imagem Atual:</label>
                        <img src="@Model.ImagemUrl" alt="Imagem Atual" class="img-thumbnail shadow-sm rounded-3"
                            style="max-width: 200px; height: auto;" />
                    </div>
                }

                <hr />

                <div class="d-flex justify-content-between align-items-center mt-4">

                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i> Voltar à Lista
                    </a>
                    <div class="mb-4">
                        <a asp-action="GerenciarVariacoes" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-flask"></i> Gerenciar variações do produto
                        </a>
                        <button type="submit" class="btn btn-success px-4">
                            <i class="bi bi-save me-1"></i> Salvar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}