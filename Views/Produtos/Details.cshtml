@model Ecomerce.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes</h1>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        
        </dl>
    
    <div class="row mb-4">
        <div class="col-md-4">
            <form asp-controller="Carrinho" asp-action="Adicionar" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="form-group mb-3">
                    <label for="quantidade">Quantidade</label>
                    <input type="number" name="quantidade" id="quantidade" value="1" min="1" max="@Model.Estoque" class="form-control" style="width: 100px;" required />
                </div>
                
                @if (Model.Estoque > 0)
                {
                    <button type="submit" class="btn btn-primary btn-lg">
                        Adicionar ao Carrinho
                    </button>
                }
                else
                {
                    <span class="text-danger">Produto Esgotado!</span>
                }
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary btn-sm">Editar (Admin)</a> |
