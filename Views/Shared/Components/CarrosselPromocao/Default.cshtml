@model List<Ecomerce.Models.Produto>
@using System.Globalization
@using Humanizer

@if (Model != null && Model.Any())
{
    <style>
        .carousel-nav-zone {
            position: absolute;
            top: 0;
            width: 12%;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background-color .3s;
            cursor: pointer;
            z-index: 5;
        }

        .carousel-nav-zone:hover {
            background-color: rgba(0, 0, 0, 0.05);
        }

        .carousel-prev-zone {
            left: 0;
        }

        .carousel-next-zone {
            right: 0;
        }

        .carousel-nav-icon {
            background-color: #fff;
            border-radius: 50%;
            padding: 12px;
            box-shadow: 0 0 8px rgba(0, 0, 0, .15);
        }

        .carousel-inner .row {
            justify-content: center;
        }

        /* Cards ocupam mais espaÃ§o quando hÃ¡ poucos itens */
        .carousel-inner .col-auto {
            flex: 0 0 auto;
        }
    </style>

    <h2 class="text-center my-4">ðŸ”¥ Produtos em Destaque</h2>

    <div class="position-relative">

        <div id="carouselPromocao" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">

                @for (int i = 0; i < Model.Count; i += 4)
                {
                    var itens = Model.Skip(i).Take(4).ToList();
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="row g-3">

                            @foreach (Produto produto in itens)
                            {
                                <div class="col-12 col-sm-6 col-lg-3 col-auto">
                                    @await Html.PartialAsync("_CardProduto", produto)
                                </div>
                            }

                        </div>
                    </div>
                }

            </div>
        </div>

        <div class="carousel-nav-zone carousel-prev-zone" data-bs-target="#carouselPromocao" data-bs-slide="prev">
            <span class="carousel-nav-icon carousel-control-prev-icon"></span>
        </div>

        <div class="carousel-nav-zone carousel-next-zone" data-bs-target="#carouselPromocao" data-bs-slide="next">
            <span class="carousel-nav-icon carousel-control-next-icon"></span>
        </div>
    </div>
}