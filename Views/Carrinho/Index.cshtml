@model List<Ecomerce.Models.ItemCarrinho>
@using System.Globalization
@using Ecomerce.Models

@{
    ViewData["Title"] = "Seu Carrinho de Compras";
    var ptBR = new CultureInfo("pt-BR");
    
    decimal totalGeral = Model
        .Sum(item => 
        {
            decimal precoUnitarioFinal = item.PrecoPromocional.HasValue && item.PrecoPromocional.Value > 0
                ? item.PrecoPromocional.Value
                : item.PrecoTabela;
            
            return precoUnitarioFinal * item.Quantidade;
        });

    decimal subtotalOriginal = Model.Sum(item => item.PrecoTabela * item.Quantidade);
    decimal totalDesconto = subtotalOriginal - totalGeral;
}

<h1>Seu Carrinho de Compras</h1>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Seu carrinho está vazio. Adicione alguns produtos!
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Voltar às Compras</a>
}
else
{
    <div class="row">
        <div class="col-md-9">
            <table class="table table-striped table-hover">
                <thead class="bg-light">
                    <tr>
                        <th style="width: 100px;">Produto</th>
                        <th>Detalhes</th>
                        <th style="width: 150px;">Preço Unitário</th>
                        <th style="width: 100px;">Quantidade</th>
                        <th style="width: 150px;">Subtotal</th>
                        <th style="width: 50px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ItemCarrinho item in Model)
                    {
                        decimal precoUnitarioFinal = item.PrecoPromocional.HasValue && item.PrecoPromocional.Value > 0
                            ? item.PrecoPromocional.Value
                            : item.PrecoTabela;

                        bool isPromocao = item.PrecoPromocional.HasValue && item.PrecoPromocional.Value > 0 && item.PrecoPromocional.Value < item.PrecoTabela;
                        
                        Produto produto = item.Produto ?? new Produto { Nome = "Item Removido" }; 
                        
                        <tr>
                            <td>
                                <img src="@produto.ImagemUrl" alt="@produto.Nome" style="width: 80px; height: 80px; object-fit: cover;" class="img-thumbnail" />
                            </td>
                            <td>
                                <h5 class="mb-1">@produto.Nome</h5>
                                @if (!string.IsNullOrEmpty(item.NomeVariacao))
                                {
                                    <small class="text-muted">Sabor: @item.NomeVariacao</small>
                                }
                                else
                                {
                                    <small class="text-danger">Sabor não especificado</small>
                                }
                            </td>
                            <td>
                                @if (isPromocao)
                                {
                                    <div class="d-flex flex-column">
                                        <span class="text-muted text-decoration-line-through small">
                                            @item.PrecoTabela.ToString("C", ptBR)
                                        </span>
                                        <span class="text-danger fw-bold">
                                            @precoUnitarioFinal.ToString("C", ptBR)
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    @precoUnitarioFinal.ToString("C", ptBR)
                                }
                            </td>
                            <td>
                                @item.Quantidade
                            </td>
                            <td>
                                @((precoUnitarioFinal * item.Quantidade).ToString("C", ptBR))
                            </td>
                            <td>
                                <form asp-controller="Carrinho" asp-action="RemoverItem" method="post" class="d-inline">
                                    <input type="hidden" name="variacaoId" value="@item.VariacaoId" />
                                    <button type="submit" class="btn btn-sm btn-danger" title="Remover Item">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Resumo do Pedido</h5>
                    <hr />
                    
                    <div class="d-flex justify-content-between mb-2">
                        <p class="mb-0">Subtotal Original:</p>
                        <p class="mb-0 fw-bold">@subtotalOriginal.ToString("C", ptBR)</p>
                    </div>

                    @if (totalDesconto > 0)
                    {
                        <div class="d-flex justify-content-between mb-3 text-danger">
                            <p class="mb-0">Economia Total:</p>
                            <p class="mb-0 fw-bold">- @totalDesconto.ToString("C", ptBR)</p>
                        </div>
                    }

                    <div class="d-flex justify-content-between h4 border-top pt-2">
                        <p class="mb-0 fw-bold">Total a Pagar:</p>
                        <p class="mb-0 text-success fw-bolder">@totalGeral.ToString("C", ptBR)</p>
                    </div>
                    
                    <a asp-controller="Checkout" asp-action="Index" class="btn btn-success w-100 mt-3">Finalizar Compra</a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Continuar Comprando</a>
                </div>
            </div>
        </div>
    </div>
}