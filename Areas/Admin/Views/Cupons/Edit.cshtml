@model Ecomerce.Models.Cupom

@{
    ViewData["Title"] = "Editar Cupom";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center py-3 rounded-top-4">
            <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i> Editar Cupom</h2>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Codigo" class="form-label fw-semibold"></label>
                        <input asp-for="Codigo" class="form-control shadow-sm" />
                        <span asp-validation-for="Codigo" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="TipoDesconto" class="form-label fw-semibold"></label>
                        <select asp-for="TipoDesconto" class="form-select shadow-sm">
                            <option value="Porcentagem">Porcentagem (%)</option>
                            <option value="Valor">Valor (R$)</option>
                        </select>
                        <span asp-validation-for="TipoDesconto" class="text-danger small"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Valor" class="form-label fw-semibold"></label>
                        <input asp-for="Valor" class="form-control shadow-sm" />
                        <span asp-validation-for="Valor" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorMinimoPedido" class="form-label fw-semibold"></label>
                        <input asp-for="ValorMinimoPedido" class="form-control shadow-sm" />
                        <span asp-validation-for="ValorMinimoPedido" class="text-danger small"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="Ativo" />
                            <label class="form-check-label fw-semibold" asp-for="Ativo">Cupom Ativo</label>
                        </div>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="DataExpiracao" class="form-label fw-semibold"></label>
                        <input asp-for="DataExpiracao" type="date" class="form-control shadow-sm" />
                        <span asp-validation-for="DataExpiracao" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="LimiteUsos" class="form-label fw-semibold"></label>
                        <input asp-for="LimiteUsos" class="form-control shadow-sm" />
                        <span asp-validation-for="LimiteUsos" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="UsosAtuais" class="form-label fw-semibold"></label>
                    <input asp-for="UsosAtuais" class="form-control shadow-sm" readonly />
                    <small class="text-muted">Atualizado automaticamente conforme uso.</small>
                    <span asp-validation-for="UsosAtuais" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-arrow-left me-1"></i> Voltar à Lista
                    </a>

                    <button type="submit" class="btn btn-warning px-4 text-dark fw-semibold">
                        <i class="bi bi-save me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
