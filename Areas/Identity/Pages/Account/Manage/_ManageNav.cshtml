@inject SignInManager<IdentityUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column gap-1">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)"
           id="perfil"
           asp-page="./Index">
            <i class="bi bi-person-circle me-2"></i> Perfil
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)"
           id="email"
           asp-page="./Email">
            <i class="bi bi-envelope-fill me-2"></i> E-mail
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)"
           id="alterar-senha"
           asp-page="./ChangePassword">
            <i class="bi bi-lock-fill me-2"></i> Alterar Senha
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
               id="logins-externos"
               asp-page="./ExternalLogins">
                <i class="bi bi-box-arrow-in-right me-2"></i> Logins Externos
            </a>
        </li>
    }
</ul>
